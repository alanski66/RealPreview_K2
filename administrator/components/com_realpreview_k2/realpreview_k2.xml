	<uninstall>
		<!--sql>
			<file driver="mysql" charset="utf8">uninstall.realpreview_k2.sql</file>
		</sql-->
	</uninstall>
	
	<installfile>install.realpreview_k2.php</installfile>
	<scriptfile>script.realpreview_k2.php</scriptfile>

	<files folder="site">
		<filename>controller.php</filename>
		<filename>realpreview_k2.php</filename>
		<filename>index.html</filename>
	 </files>
	 
	<media folder="media/realpreview" destination="realpreview">
		<folder>k2</folder>
	</media>
	
	<administration>
		<menu>K2 Real Preview</menu>
		<files folder="admin">
			<folder>assets</folder>
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>lib</folder>
			<folder>models</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<filename>admin.realpreview_k2.php</filename>
			<filename>controller.php</filename>
			<filename>index.html</filename>
			<filename>config.xml</filename>
			<!--filename>install.realpreview_k2.sql</filename>
			<filename>uninstall.realpreview_k2.sql</filename-->
		</files>
		
		<languages folder="admin/language">
			<language tag="en-GB">en-GB.com_realpreview_k2.ini</language>
		</languages>
	</administration>
